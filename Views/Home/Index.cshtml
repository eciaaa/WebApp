@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #ffffff;
            margin: 0;
        }

        .hero-section {
            background-color: #6c757d; 
            color: white;
            padding: 80px 0;
            text-align: center;
        }

        .hero-section h1 {
            font-size: 3.5rem;
            font-weight: 700;
        }

        .hero-section p {
            font-size: 1.2rem;
            margin: 20px 0;
        }

        .features-section {
            padding: 60px 0;
            background-color: #ffffff;
        }

        .features-section h2 {
            font-size: 2.5rem;
            font-weight: 600;
            text-align: center;
            margin-bottom: 50px;
        }

        .feature-card {
            background-color: #f1f1f1;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .feature-card h3 {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 20px 0;
        }

        .feature-card p {
            font-size: 1rem;
            color: #555;
        }

    </style>
</head>

<body>

    <section class="hero-section">
        <div class="container">
            <h1>Welcome to Our Website</h1>
            <p>Your go-to platform for amazing services, insights, and experiences.</p>
        </div>
    </section>

    <section class="features-section" id="features">
        <div class="container">
            <h2>Our Features</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Fast and Secure</h3>
                        <p>Our platform is designed with speed and security as top priorities, ensuring a seamless experience.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>Innovative Tools</h3>
                        <p>We offer a range of advanced tools to help you optimize your workflow and achieve great results.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <h3>User Friendly</h3>
                        <p>Our platform is intuitive and easy to use, making it accessible for everyone to get started quickly.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>

